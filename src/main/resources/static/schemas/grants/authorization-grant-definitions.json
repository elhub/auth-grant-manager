{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$defs": {
    "id": {
      "$ref": "../base-definitions.schema.json#/definitions/resourceId"
    },
    "type": {
      "type": "string",
      "description": "The type of the resource object.",
      "const": "AuthorizationGrant"
    },
    "attributes": {
      "$defs": {
        "status": {
          "type": "string",
          "description": "The status of the authorization grant.",
          "enum": ["Active", "Exhausted", "Expired", "Revoked"]
        },
        "grantedAt": {
          "type": "string",
          "format": "date-time",
          "description": "The date and time when the authorization is granted at.",
          "examples": ["2025-12-29T10:13:18.245067+01:00"]
        },
        "validFrom": {
          "type": "string",
          "format": "date-time",
          "description": "The date and time when the authorization grant is valid from.",
          "examples": ["2025-12-29T10:13:18.245095+01:00"]
        },
        "validTo": {
          "type": "string",
          "format": "date-time",
          "description": "The date and time when the authorization grant is valid to.",
          "examples": ["2026-12-29T10:13:18.245106+01:00"]
        }
      }
    },
    "relationships": {
      "$defs": {
        "grantedFor": {
          "$ref": "../base-definitions.schema.json#/definitions/relationshipParty"
        },
        "grantedBy": {
          "$ref": "../base-definitions.schema.json#/definitions/relationshipParty"
        },
        "grantedTo": {
          "$ref": "../base-definitions.schema.json#/definitions/relationshipParty"
        },
        "source": {
          "type": "object",
          "description": "The source that created this authorization grant.",
          "properties": {
            "data": {
              "type": "object",
              "properties": {
                "id": {
                  "type": "string",
                  "description": "ID of the source (authorization request or document)."
                },
                "type": {
                  "type": "string",
                  "enum": ["AuthorizationRequest", "AuthorizationDocument"]
                }
              },
              "examples": [
                {
                  "id": "4f71d596-99e4-415e-946d-7252c1a40c5b",
                  "type": "AuthorizationRequest"
                }
              ]
            },
            "links": {
              "type": "object",
              "properties": {
                "self": {
                  "type": "string",
                  "format": "uri"
                }
              },
              "examples": [
                {
                  "self": "/access/v0/authorization-requests/4f71d596-99e4-415e-946d-7252c1a40c5b"
                }
              ]
            }
          }
        }
      }
    },
    "links": {
      "$defs": {
        "self": {
          "type": "string",
          "format": "uri",
          "examples": [
            "/access/v0/authorization-grants/123e4567-e89b-12d3-a456-426614174000"
          ]
        }
      }
    }
  }
}
