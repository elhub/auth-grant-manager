{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$defs": {
    "id": {
      "$ref": "../base-definitions.schema.json#/definitions/resourceId"
    },
    "type": {
      "type": "string",
      "description": "The type of the resource object.",
      "const": "AuthorizationScope"
    },
    "attributes": {
      "$defs": {
        "permissionType": {
          "type": "string",
          "description": "The type of permission granted by the scope.",
          "enum": ["ChangeOfSupplier", "ReadAccess"]
        }
      }
    },
    "meta": {
      "$defs": {
        "createdAt": {
          "type": "string",
          "format": "date-time",
          "description": "The date and time when the authorization scope was created.",
          "examples": ["2025-12-29T10:13:18.245106+01:00"]
        }
      }
    },
    "relationships": {
      "$defs": {
        "authorizedResources": {
          "type": "object",
          "description": "The resources that this scope gives permissions for.",
          "properties": {
            "data": {
              "type": "array",
              "items": {
                "$ref": "#/$defs/relationshipObject"
              }
            }
          },
          "required": ["data"]
        }
      }
    },
    "relationshipObject": {
      "type": "object",
      "properties": {
        "data": {
          "type": "object",
          "properties": {
            "type": {
              "type": "string",
              "description": "A relationship to a scoped object.",
              "enum": ["MeteringPoint"]
            },
            "id": {
              "type": "string",
              "description": "The unique identifier of the linked resource."
            }
          },
          "examples": [
            {
              "data": {
                "type": "MeteringPoint",
                "id": "12345678901234"
              }
            }
          ]
        }
      },
      "required": ["data"]
    },
    "scopeReference": {
      "type": "object",
      "description": "An object representing a scope in the authorization grant.",
      "properties": {
        "type": {
          "type": "string",
          "description": "The type of the object.",
          "enum": ["AuthorizationScope"]
        },
        "id": {
          "type": "string",
          "description": "ID of the scope object."
        }
      },
      "required": ["type", "id"]
    }
  }
}
