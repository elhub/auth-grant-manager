{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$defs": {
    "id": {
      "$ref": "../elhub-common.schema.json#/$defs/resourceUuid"
    },
    "type": {
      "type": "string",
      "description": "Identifies the resource as an 'AuthorizationDocument' in accordance with JSON:API standards.",
      "const": "AuthorizationDocument",
      "examples": ["AuthorizationDocument"]
    },
    "documentType": {
      "type": "string",
      "description": "Classifies the type of the authorization document being created or managed (e.g., supplier switch confirmation).",
      "enum": [
        "ChangeOfBalanceSupplierForPerson",
        "MoveInAndChangeOfBalanceSupplierForPerson"
      ],
      "examples": [
        "ChangeOfBalanceSupplierForPerson",
        "MoveInAndChangeOfBalanceSupplierForPerson"
      ]
    },
    "attributes": {
      "type": "object",
      "description": "Attributes of the AuthorizationDocument resource.",
      "properties": {
        "documentType": {
          "$ref": "#/$defs/documentType"
        },
        "status": {
          "type": "string",
          "description": "The current state of the document within the signature workflow (e.g., waiting for signature, signed, or expired).",
          "enum": ["Expired", "Pending", "Rejected", "Signed"],
          "examples": ["Pending"]
        },
        "createdAt": {
          "$ref": "../elhub-common.schema.json#/$defs/createdAt"
        },
        "updatedAt": {
          "$ref": "../elhub-common.schema.json#/$defs/updatedAt"
        },
        "validTo": {
          "$ref": "../elhub-common.schema.json#/$defs/validTo"
        }
      }
    },
    "relationships": {
      "type": "object",
      "description": "References to related resources.",
      "properties": {
        "requestedBy": {
          "description": "Reference to the resource object representing the party that initiated the request for this authorization document.",
          "$ref": "../elhub-common.schema.json#/$defs/relationshipParty"
        },
        "requestedFrom": {
          "description": "Reference to the resource object representing the party who owns the access or rights being requested in this document.",
          "$ref": "../elhub-common.schema.json#/$defs/relationshipParty"
        },
        "requestedTo": {
          "description": "Reference to the resource object representing the authorized representative expected to review and sign this document on behalf of the 'requested from' party.",
          "$ref": "../elhub-common.schema.json#/$defs/relationshipParty"
        },
        "signedBy": {
          "description": "Reference to the resource object representing the party who signed this authorization document (populated after signing).",
          "$ref": "../elhub-common.schema.json#/$defs/relationshipParty"
        },
        "authorizationGrant": {
          "type": "object",
          "properties": {
            "links": {
              "type": "object",
              "properties": {
                "self": {
                  "type": "string",
                  "description": "Direct link to the authorization grant created by this document.",
                  "examples": [
                    "/access/v0/authorization-grants/123e4567-e89b-12d3-a456-426614174000"
                  ]
                }
              }
            },
            "data": {
              "type": "object",
              "properties": {
                "type": {
                  "$ref": "../grants/authorization-grant-common.schema.json#/$defs/type"
                },
                "id": {
                  "$ref": "../elhub-common.schema.json#/$defs/resourceUuid"
                }
              }
            }
          }
        }
      }
    },
    "meta": {
      "type": "object",
      "description": "Read-only context and human-readable metadata.",
      "properties": {
        "requestedFromName": {
          "$ref": "../authorization-common.schema.json#/$defs/requestedFromName"
        },
        "requestedForMeteringPointId": {
          "$ref": "../authorization-common.schema.json#/$defs/requestedForMeteringPointId"
        },
        "requestedForMeteringPointAddress": {
          "$ref": "../authorization-common.schema.json#/$defs/requestedForMeteringPointAddress"
        },
        "balanceSupplierName": {
          "$ref": "../authorization-common.schema.json#/$defs/balanceSupplierName"
        },
        "balanceSupplierContractName": {
          "$ref": "../authorization-common.schema.json#/$defs/balanceSupplierContractName"
        },
        "moveInDate": {
          "$ref": "../authorization-common.schema.json#/$defs/moveInDate"
        },
        "language": {
          "$ref": "../authorization-common.schema.json#/$defs/language"
        },
        "requestedBy": {
          "description": "The party identifier of the actor who initiated the request (e.g., the GLN of the requesting balance supplier).",
          "$ref": "../elhub-common.schema.json#/$defs/partyIdentifier"
        },
        "requestedFrom": {
          "description": "The party identifier of the resource owner (who must grant the access). This is typically the person or organization being requested to sign the document.",
          "$ref": "../elhub-common.schema.json#/$defs/partyIdentifier"
        },
        "requestedTo": {
          "description": "The party identifier of the specific agent or person expected to review and sign the document on behalf of the 'requested from' party.",
          "$ref": "../elhub-common.schema.json#/$defs/partyIdentifier"
        },
        "signedBy": {
          "description": "The party identifier of the actual signer (populated after the document is signed).",
          "$ref": "../elhub-common.schema.json#/$defs/partyIdentifier"
        }
      }
    },
    "links": {
      "type": "object",
      "properties": {
        "self": {
          "type": "string",
          "format": "uri",
          "description": "The canonical URI for retrieving this specific authorization document.",
          "examples": [
            "/access/v0/authorization-documents/123e4567-e89b-12d3-a456-426614174000"
          ]
        },
        "file": {
          "type": "string",
          "format": "uri",
          "description": "Direct link to download the PDF representation of the authorization document.",
          "examples": [
            "/access/v0/authorization-documents/123e4567-e89b-12d3-a456-426614174000.pdf"
          ]
        }
      }
    }
  }
}
