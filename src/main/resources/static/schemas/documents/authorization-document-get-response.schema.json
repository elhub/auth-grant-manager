{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Authorization Document",
  "description": "Schema for returning a single authorization document object in the Elhub authorization manager.",
  "type": "object",
  "properties": {
    "data": {
      "type": "object",
      "properties": {
        "id": {
          "$ref": "authorization-document-definitions.json#/$defs/id"
        },
        "type": {
          "$ref": "authorization-document-definitions.json#/$defs/type"
        },
        "attributes": {
          "type": "object",
          "properties": {
            "documentType": {
              "$ref": "authorization-document-definitions.json#/$defs/attributes/$defs/documentType"
            },
            "status": {
              "$ref": "authorization-document-definitions.json#/$defs/attributes/$defs/status"
            },
            "validTo": {
              "$ref": "authorization-document-definitions.json#/$defs/attributes/$defs/validTo"
            }
          }
        },
        "relationships": {
          "type": "object",
          "properties": {
            "requestedBy": {
              "$ref": "authorization-document-definitions.json#/$defs/relationships/$defs/requestedBy"
            },
            "requestedFrom": {
              "$ref": "authorization-document-definitions.json#/$defs/relationships/$defs/requestedFrom"
            },
            "requestedTo": {
              "$ref": "authorization-document-definitions.json#/$defs/relationships/$defs/requestedTo"
            },
            "signedBy": {
              "$ref": "authorization-document-definitions.json#/$defs/relationships/$defs/signedBy"
            },
            "grant": {
              "$ref": "authorization-document-definitions.json#/$defs/relationships/$defs/grant"
            }
          }
        },
        "metadata": {
          "type": "object",
          "properties": {
            "createdAt": {
              "$ref": "authorization-document-definitions.json#/$defs/attributes/$defs/createdAt"
            },
            "updatedAt": {
              "$ref": "authorization-document-definitions.json#/$defs/attributes/$defs/updatedAt"
            },
            "requestedFromName": {
              "$ref": "authorization-document-definitions.json#/$defs/meta/$defs/requestedFromName"
            },
            "requestedForMeteringPointId": {
              "$ref": "authorization-document-definitions.json#/$defs/meta/$defs/requestedForMeteringPointId"
            },
            "requestedForMeteringPointAddress": {
              "$ref": "authorization-document-definitions.json#/$defs/meta/$defs/requestedForMeteringPointAddress"
            },
            "balanceSupplierName": {
              "$ref": "authorization-document-definitions.json#/$defs/meta/$defs/balanceSupplierName"
            },
            "balanceSupplierContractName": {
              "$ref": "authorization-document-definitions.json#/$defs/meta/$defs/balanceSupplierContractName"
            }
          }
        },
        "links": {
          "type": "object",
          "properties": {
            "self": {
              "description": "Link to the authorization document itself",
              "$ref": "authorization-document-definitions.json#/$defs/links/$defs/self"
            },
            "file": {
              "description": "Link to the actual authorization document pdf file",
              "$ref": "authorization-document-definitions.json#/$defs/links/$defs/file"
            }
          }
        }
      }
    },
    "links": {
      "description": "Link members related to the primary data.",
      "$ref": "../base-definitions.schema.json#/definitions/topLevelLinks"
    },
    "meta": {
      "$ref": "../base-definitions.schema.json#/definitions/topLevelMeta"
    }
  }
}
