{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Authorization Document Submission",
  "description": "Schema for the payload to create a new authorization document.",
  "type": "object",
  "properties": {
    "data": {
      "type": "object",
      "required": ["type", "attributes", "meta"],
      "properties": {
        "type": {
          "$ref": "authorization-document-common.schema.json#/$defs/type"
        },
        "attributes": {
          "type": "object",
          "required": ["documentType"],
          "properties": {
            "documentType": {
              "$ref": "authorization-document-common.schema.json#/$defs/documentType"
            }
          }
        },
        "meta": {
          "type": "object",
          "description": "Contextual metadata required to initialize the document. The required metadata fields depend on the document type.",
          "properties": {
            "requestedBy": {
              "$ref": "../authorization-common.schema.json#/$defs/requestedBy"
            },
            "requestedFrom": {
              "$ref": "../authorization-common.schema.json#/$defs/requestedFrom"
            },
            "requestedTo": {
              "$ref": "../authorization-common.schema.json#/$defs/requestedTo"
            },
            "requestedFromName": {
              "$ref": "../authorization-common.schema.json#/$defs/requestedFromName"
            },
            "requestedForMeteringPointId": {
              "$ref": "../authorization-common.schema.json#/$defs/requestedForMeteringPointId"
            },
            "requestedForMeteringPointAddress": {
              "$ref": "../authorization-common.schema.json#/$defs/requestedForMeteringPointAddress"
            },
            "balanceSupplierName": {
              "$ref": "../authorization-common.schema.json#/$defs/balanceSupplierName"
            },
            "balanceSupplierContractName": {
              "$ref": "../authorization-common.schema.json#/$defs/balanceSupplierContractName"
            },
            "startDate": {
              "$ref": "../authorization-common.schema.json#/$defs/startDate"
            }
          }
        }
      },
      "allOf": [
        {
          "if": {
            "properties": {
              "attributes": {
                "properties": {
                  "documentType": {
                    "const": "ChangeOfSupplierConfirmation"
                  }
                }
              }
            }
          },
          "then": {
            "properties": {
              "meta": {
                "required": [
                  "requestedBy",
                  "requestedFrom",
                  "requestedTo",
                  "requestedFromName",
                  "requestedForMeteringPointId",
                  "requestedForMeteringPointAddress",
                  "balanceSupplierName",
                  "balanceSupplierContractName"
                ]
              }
          }
        }
      },
      {
        "if": {
          "properties": {
            "attributes": {
              "properties": {
                "documentType": {
                  "const": "MoveIn"
                }
              }
            }
          }
        },
        "then": {
          "properties": {
            "meta": {
              "required": [
                "requestedBy",
                "requestedFrom",
                "requestedTo",
                "requestedFromName",
                "requestedForMeteringPointId",
                "requestedForMeteringPointAddress",
                "balanceSupplierName",
                "balanceSupplierContractName",
                "startDate"
              ]
            }
          }
        }
      }
    ]
  }
  },
  "required": ["data"]
}
