{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$defs": {
    "id": {
      "$ref": "../base-definitions.schema.json#/definitions/resourceId"
    },
    "type": {
      "type": "string",
      "description": "The type of the resource object.",
      "const": "AuthorizationDocument"
    },
    "attributes": {
      "$defs": {
        "documentType": {
          "type": "string",
          "description": "The type of the authorization document.",
          "enum": ["ChangeOfSupplierConfirmation"]
        },
        "status": {
          "type": "string",
          "description": "The status of the authorization document.",
          "enum": ["Expired", "Pending", "Rejected", "Signed"]
        },
        "createdAt": {
          "type": "string",
          "format": "date-time",
          "description": "The date and time when the authorization document was created."
        },
        "updatedAt": {
          "type": "string",
          "format": "date-time",
          "description": "The date and time when the authorization document was updated last."
        },
        "validTo": {
          "type": "string",
          "format": "date",
          "description": "The date when the authorization document is no longer valid.",
          "examples": ["2025-12-31"]
        }
      }
    },
    "relationships": {
      "$defs": {
        "requestedBy": {
          "$ref": "../base-definitions.schema.json#/definitions/relationshipParty"
        },
        "requestedFrom": {
          "$ref": "../base-definitions.schema.json#/definitions/relationshipParty"
        },
        "requestedTo": {
          "$ref": "../base-definitions.schema.json#/definitions/relationshipParty"
        },
        "signedBy": {
          "$ref": "../base-definitions.schema.json#/definitions/relationshipParty"
        },
        "grant": {
          "type": "object",
          "properties": {
            "links": {
              "type": "object",
              "properties": {
                "self": {
                  "type": "string",
                  "examples": [
                    "/authorization-grants/123e4567-e89b-12d3-a456-426614174000"
                  ]
                }
              }
            },
            "data": {
              "type": "object",
              "properties": {
                "type": {
                  "$ref": "../grants/authorization-grant-definitions.json#/$defs/type"
                },
                "id": {
                  "$ref": "../base-definitions.schema.json#/definitions/resourceId"
                }
              }
            }
          }
        }
      }
    },
    "meta": {
      "$defs": {
        "requestedBy": {
          "description": "The party identifier of the actor requesting the authorization document",
          "$ref": "../base-definitions.schema.json#/definitions/partyIdentifier"
        },
        "requestedFrom": {
          "description": "The party identifier representing the owner of the access or rights for which the authorization document is being requested.",
          "$ref": "../base-definitions.schema.json#/definitions/partyIdentifier"
        },
        "requestedTo": {
          "description": "The party identifier of the person authorized to review and approve the authorization document on behalf of the owner.",
          "$ref": "../base-definitions.schema.json#/definitions/partyIdentifier"
        },
        "signedBy": {
          "description": "The party identifier of the person who signs the authorization document.",
          "$ref": "../base-definitions.schema.json#/definitions/partyIdentifier"
        },
        "requestedFromName": {
          "type": "string",
          "description": "The name of the organization or person who the authorization document is requested from.",
          "examples": ["Ola Normann"]
        },
        "requestedForMeteringPointId": {
          "type": "string",
          "description": "The unique identifier of the metering point associated with the authorization document.",
          "examples": ["1234567890123"]
        },
        "requestedForMeteringPointAddress": {
          "type": "string",
          "description": "The address of the metering point associated with the authorization document.",
          "examples": ["Example Street 1, 1234 Oslo"]
        },
        "balanceSupplierContractName": {
          "type": "string",
          "description": "The unique name of a supplier contract associated with the authorization document.",
          "examples": ["ExampleSupplierContract"]
        },
        "balanceSupplierName": {
          "type": "string",
          "description": "The name of the balance supplier associated with the authorization document.",
          "examples": ["Example Supplier AS"]
        }
      }
    },
    "links": {
      "$defs": {
        "self": {
          "type": "string",
          "format": "uri",
          "examples": [
            "https://api.elhub.no/authorization-documents/123e4567-e89b-12d3-a456-426614174000"
          ]
        },
        "file": {
          "type": "string",
          "format": "uri",
          "description": "Link to download the pdf document",
          "examples": [
            "https://api.elhub.no/authorization-documents/123e4567-e89b-12d3-a456-426614174000.pdf"
          ]
        }
      }
    }
  }
}
