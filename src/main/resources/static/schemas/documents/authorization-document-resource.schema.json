{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Authorization Document",
  "description": "Schema for returning a single authorization document object in the Elhub authorization manager.",
  "type": "object",
  "properties": {
    "data": {
      "type": "object",
      "required": [
        "id",
        "type",
        "attributes",
        "relationships",
        "meta",
        "links"
      ],
      "properties": {
        "id": {
          "$ref": "authorization-document-common.schema.json#/$defs/id"
        },
        "type": {
          "$ref": "authorization-document-common.schema.json#/$defs/type"
        },
        "attributes": {
          "$ref": "authorization-document-common.schema.json#/$defs/attributes",
          "required": [
            "documentType",
            "status",
            "createdAt",
            "updatedAt",
            "validTo"
          ]
        },
        "relationships": {
          "$ref": "authorization-document-common.schema.json#/$defs/relationships",
          "required": [
            "requestedBy",
            "requestedFrom",
            "requestedTo"
          ]
        },
        "meta": {
          "type": "object",
          "description": "Read-only context specific to this resource view.",
          "additionalProperties": false,
          "properties": {
            "requestedFromName": {
              "$ref": "../authorization-common.schema.json#/$defs/requestedFromName"
            },
            "requestedForMeteringPointId": {
              "$ref": "../authorization-common.schema.json#/$defs/requestedForMeteringPointId"
            },
            "requestedForMeteringPointAddress": {
              "$ref": "../authorization-common.schema.json#/$defs/requestedForMeteringPointAddress"
            },
            "balanceSupplierName": {
              "$ref": "../authorization-common.schema.json#/$defs/balanceSupplierName"
            },
            "balanceSupplierContractName": {
              "$ref": "../authorization-common.schema.json#/$defs/balanceSupplierContractName"
            }
          }
        },
        "links": {
          "$ref": "authorization-document-common.schema.json#/$defs/links",
          "required": [
            "self",
            "file"
          ]
        }
      }
    },
    "links": {
      "description": "Link members related to the primary data.",
      "$ref": "../json-api-framework.schema.json#/$defs/topLevelLinks"
    },
    "meta": {
      "$ref": "../json-api-framework.schema.json#/$defs/topLevelMeta"
    }
  },
  "required": [
    "data",
    "links",
    "meta"
  ]
}
