{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Authorization Request Patch Request",
  "description": "Schema for updating authorization requests to the Elhub authorization manager.",
  "type": "object",
  "properties": {
    "data": {
      "description": "The authorization request properties to be updated.",
      "type": "object",
      "properties": {
        "type": {
          "$ref": "authorization-request-definitions.json#/$defs/type"
        },
        "attributes": {
          "type": "object",
          "description": "The attributes of the authorization request.",
          "properties": {
            "status": {
              "$ref": "authorization-request-definitions.json#/$defs/attributes/$defs/status"
            }
          },
          "required": ["status"],
          "additionalProperties": false
        }
      },
      "required": ["type", "attributes"],
      "additionalProperties": false
    }
  },
  "required": ["data"],
  "additionalProperties": false
}
