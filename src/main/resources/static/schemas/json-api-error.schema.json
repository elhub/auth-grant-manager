{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "JSON Api Error Response",
  "description": "Schema for Elhub API Errors.",
  "type": "object",
  "properties": {
    "errors": {
      "$ref": "#/$defs/errors"
    },
    "links": {
      "description": "Link members related to the primary data.",
      "$ref": "json-api-framework.schema.json#/$defs/topLevelLinks",
      "examples": [
        "https://api.elhub.no/example-endpoint/"
      ]
    },
    "meta": {
      "$ref": "json-api-framework.schema.json#/$defs/topLevelMeta"
    }
  },
  "required": [
    "errors"
  ],
  "additionalProperties": false,
  "$defs": {
    "error": {
      "type": "object",
      "properties": {
        "status": {
          "description": "The HTTP status code applicable to this problem, expressed as a string value.",
          "type": "string",
          "examples": [
            "400"
          ]
        },
        "code": {
          "description": "An application-specific error code, expressed as a string value.",
          "type": "string",
          "examples": [
            "invalid_input"
          ]
        },
        "title": {
          "description": "A short, human-readable summary of the problem. It **SHOULD NOT** change from occurrence to occurrence of the problem.",
          "type": "string",
          "examples": [
            "Invalid input"
          ]
        },
        "detail": {
          "description": "A human-readable explanation specific to this occurrence of the problem.",
          "type": "string",
          "examples": [
            "The input field 'name' is required. Ipsum lorem dolor sit amet."
          ]
        }
      },
      "required": [
        "title",
        "detail"
      ]
    },
    "errors": {
      "type": "array",
      "items": {
        "$ref": "#/$defs/error"
      },
      "uniqueItems": true
    }
  }
}
